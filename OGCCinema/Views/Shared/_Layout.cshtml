                        <i class="fas fa-phone-alt"></i>
                        <span>Hotline: 1900 1234</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>ogccinema@gmail.com</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Cần Thơ, Việt Nam</span>
                    </div>
                </div>
            </div>

            <!-- User Account & Social -->
