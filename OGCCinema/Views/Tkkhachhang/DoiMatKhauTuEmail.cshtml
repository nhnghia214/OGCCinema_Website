@{
    ViewBag.Title = "Đổi mật khẩu sau khi quên";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Nếu bạn dùng layout
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Đổi mật khẩu</h4>
                </div>

                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form method="post" asp-action="DoiMatKhauTuEmail" asp-controller="Tkkhachhang">
                        <input type="hidden" name="username" value="@ViewBag.Username" />

                        <div class="mb-3">
                            <label for="oldPassword" class="form-label">Mật khẩu đã gửi về email</label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Xác nhận đổi mật khẩu</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a href="@Url.Action("DangNhap", "Home")">Quay lại đăng nhập</a>
                </div>
            </div>

        </div>
    </div>
</div>
